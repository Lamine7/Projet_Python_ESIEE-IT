import random

def deviner_mot_secret():
    # Définir le mot secret
    mot_secret = "python"

    print("Bienvenue dans le jeu de devinette !")
    print("Essayez de deviner le mot secret.")

    # Boucle jusqu'à ce que l'utilisateur devine correctement
    while True:
        tentative = input("Entrez votre tentative : ")

        if tentative.lower() == mot_secret:
            print("Félicitations ! Vous avez deviné le mot secret.")
            break
        else:
            print("Incorrect. Essayez encore.")

# Appeler la fonction
deviner_mot_secret()